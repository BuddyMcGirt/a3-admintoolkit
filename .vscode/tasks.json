{
    "version": "0.1.0",
    "name": "PBO Task",
    "command": "powershell",
    "echoCommand": true,
    "args": [
        "${workspaceRoot}\\build.ps1"
    ],
    "tasks": [
        {
            "suppressTaskName": true,
            "taskName": "Build",
            "isBuildCommand": true,
            "args": [ "-BuildAll"],
        },
        {
            "suppressTaskName": true,
            "taskName": "Server: Build",
            "args": [ "-BuildServer"]
        },
        {
            "suppressTaskName": true,
            "taskName": "Client: Build",
            "args": [ "-BuildClient"]
        },
        {
            "suppressTaskName": true,
            "taskName": "Client: Install and Run Arma 3",
            "args": [ "-Install", "-Run"]
        }
    ]
}