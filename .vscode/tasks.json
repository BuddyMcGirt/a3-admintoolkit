{
    "version": "0.1.0",
    "name": "PBO Task",
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Build Server",
            "command": "AddonBuilder",
            "args": [
                "${workspaceRoot}\\source\\admintoolkit_server", 
                "${workspaceRoot}\\@AdminToolkitServer\\addons",
                "-packonly"
            ]
        },
        {
            "taskName": "Build Server Config",
            "command": "AddonBuilder",
            "args": [
                "${workspaceRoot}\\source\\admintoolkit_servercfg", 
                "${workspaceRoot}\\@AdminToolkitServer\\addons",
                "-packonly"
            ]
        },
        {
            "taskName": "Build Client",
            "command": "AddonBuilder",
            "args": [
                "${workspaceRoot}\\source\\admintoolkit", 
                "${workspaceRoot}\\@AdminToolkit\\addons",
                "-packonly",
                "-sign=${workspaceRoot}\\admintoolkit.biprivatekey"
            ]
        },
        {
            "taskName": "Install Client",
            "command": "powershell",
            "args": [ "${workspaceRoot}\\install.ps1"]
        }
    ]
}