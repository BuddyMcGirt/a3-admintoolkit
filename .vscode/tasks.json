{
    "version": "0.1.0",
    "name": "PBO Task",
    "command": "powershell",
    "echoCommand": true,
    "args": [
        "${workspaceRoot}\\setup.ps1"
    ],
    "tasks": [
        {
            "suppressTaskName": true,
            "taskName": "Build All",
            "isBuildCommand": true,
            "args": [ "-Build"]
        },
        {
            "suppressTaskName": true,
            "taskName": "Install and Run Client (Arma 3)",
            "args": [ "-Install", "-Run"]
        },
        {
            "suppressTaskName": true,
            "taskName": "Patch MissionFile",
            "args": [ "-PatchMission"]
        }
    ]
}